<% include ../partials/header %> 

<div class="container">
    <h1 class="text-center" style="margin-bottom: 30px;">Sign Up</h1>
    <div>
        <form action="/register" method="POST" style="margin: auto; max-width: 50%;">
           <div class="form-group">
               <input type="text" class="form-control" placeholder="ID" name="username"/>
           </div>
           <div class="form-group">
               <input type="password" class="form-control" placeholder="password" name="password"/>
           </div>
           <div class="form-group">
               <input type="submit" class="btn btn-outline-primary btn-block btn-lg" value="Sign Up"/>
           </div>
        </form>
    </div>
</div>

