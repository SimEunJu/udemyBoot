<% include ../partials/header %>

<div class="container">
    <h1 style="text-align: center; margin-bottom: 30px;">Add New Comment to <%= campground.name %></h1>
    <div class="row">
        <div style="flex-direction: colume; margin: auto; max-width: 50%;">
         <form action="/campgrounds/<%= campground.id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="comment" name="comment[text]"></input>
                </div>
                <div class="form-group">
                    <button class="btn btn-outline-primary btn-lg btn-block" href="/campgrounds/<%= campground.id %>">Submit</button>
                </div>
        </form>
        <a href="/campgrounds/<%= campground.id %>" class="btn btn-outline-primary btn-block btn-lg">Go Back</a>
    </div>
    </div>
</div>

