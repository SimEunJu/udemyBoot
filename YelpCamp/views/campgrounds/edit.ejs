<% include ../partials/header %>
<div class="container">
    <h1 style="text-align: center;">Edit <%= campground.name %></h1>
    <div class="row">
       
        <div style="wdith: 50%; margin: 30px auto;">
            <form action="/campgrounds/<%= campground._id %>/edit?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[name]" placeholder="name" value="<%= campground.name %>">
                </div>
                <div class="form-group">
                     <input class="form-control" type="text" name="campground[image]" placeholder="img url" value="<%= campground.image %>">
                </div>
                <div class="form-group">
                     <input class="form-control" type="text" name="campground[description]" placeholder="description" value="<%= campground.description %>">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-outline-primary btn-block">Submit</button>
                </div>
            </form>

            <a class="btn btn-outline-primary btn-block" href="/campgrounds/<%= campground.id %>">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>
